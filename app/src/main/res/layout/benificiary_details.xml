<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="#00668E"
            android:orientation="vertical"
            >

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
              android:layout_gravity="center"

                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Name:"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_weight="1.5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Rajesh"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                android:id="@+id/bal"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Mobile No:"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="9769363548"
                        android:textColor="@android:color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Limit:"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="25000"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>



        </LinearLayout>

        <ScrollView
            android:id="@+id/mobile_slMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbarSize="0dip"
            android:scrollbarThumbVertical="@android:color/white">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp"
                        android:padding="15dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp"
                            >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name :"
                            android:gravity="left"
                            android:textSize="18dp"
                            android:layout_weight="1.5"
                            />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rajesh"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bank Name :"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1.5"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SBI"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Account No :"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1.5"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="sbi3445646"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ifsc Code :"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1.5"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SBI123456"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status :"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1.5"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Active"
                                android:gravity="left"
                                android:textSize="18dp"
                                android:layout_weight="1"
                                />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtAadhaarName1"
                                android:text="Types"
                                android:visibility="visible"
                                android:textSize="18dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                />

                            <RadioGroup
                                android:id="@+id/radioGroup1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginTop="0dp"
                                android:layout_below="@+id/date"
                                android:layout_toRightOf="@+id/gender"
                                android:orientation="horizontal"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                >

                                <RadioButton
                                    android:id="@+id/male"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="IMPS"
                                    android:textSize="18sp"
                                    android:clickable="true"
                                    android:typeface="serif"
                                    />

                                <RadioButton
                                    android:id="@+id/female"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:checked="false"
                                    android:clickable="true"
                                    android:textSize="18sp"
                                    android:text="NEFT"
                                    android:typeface="serif"
                                    />

                            </RadioGroup>

                        </LinearLayout>

                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Amount"
                            android:gravity="left"
                            android:textSize="18dp"
                            android:inputType="number"
                            android:drawableLeft="@drawable/rupee"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:drawablePadding="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Money Transfer"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:padding="15dp"
                            android:background="@color/colorPrimary"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="50dp"
                            />

                    </LinearLayout>

            </android.support.v7.widget.CardView>

        </ScrollView>

    </FrameLayout>

</RelativeLayout>